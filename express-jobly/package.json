{
  "name": "jobly-solution",
  "version": "2.0.0",
  "description": "This is the Express backend for Jobly, version 2.",
  "main": "server.js",
  "scripts": {
    "debug": "nodemon --inspect server.js",
    "dev:setup": "npm i --save-dev jest morgan nodemon supertest",
    "setup": "npm i  bcrypt body-parser express helmet jsonschema jsonwebtoken  pg ",
    "start": "nodemon server.js",
    "test": "jest -i --coverage --verbose --detectOpenHandles"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "config.js"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonschema": "^1.4.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.22",
    "supertest": "^5.0.0"
  },
  "nodemonConfig": {
    "ext": "html, css, js, json, md, py, sql",
    "verbose": true
  }
}